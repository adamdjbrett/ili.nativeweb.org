RewriteEngine On

# Preserve path and query when redirecting any request from ili.nativeweb.org (HTTP/HTTPS, with/without www) except /favicon.ico
RewriteCond %{HTTP_HOST} ^(?:www\.)?ili\.nativeweb\.org$ [NC]
RewriteCond %{REQUEST_URI} !^/favicon\.ico$
RewriteRule ^(.*)$ https://indigenouslawinstitute.com/$1 [R=301,L,QSA]

